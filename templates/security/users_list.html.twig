{% extends "back/base_back.html.twig" %}

{% block title %}
	liste des profils
{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href=" {{path('users_list') }}">liste des membres</a>
	</li>
	
{% endblock %}


{% block back_main_content %}


<div class="col-12 mb-5">
    <h2 class="amour"> {{users | length }} profils  </h2>
</div>
                

<div class="card col">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTableFull" width="100%" cellspacing="0">
            <thead class="bg-pastel_red">
                <tr class="default-color">
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Mail</th>
                    <th>Portable</th>
                    <th>Fonction</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
                {% for  user in users %}
                <tr>
                    <td>{{user.lastname}}</td>
                    <td>{{user.firstname}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.mobil}}</td>
                    <td>{{user.job}}</td>
                    <td class="text-center">
                        <button type="button" class="btn-custom-lg bg-amour text-white" onclick="location.href='{{ path('user_show',{id:user.id})}}';"><i class="fas fa-eye"></i> Voir</button>
                    </td>
                </tr>
                {% endfor %}
                
            
            </tbody>
        </table>
    </div>
</div>
		

{% endblock %}
