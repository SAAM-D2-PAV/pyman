{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card border-0 shadow" style="margin-top:15%;">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 p-5 text-center">
                        <img src="{{asset('build/images/SIGNUP.svg')}}" alt="Image" class="img-fluid">
                    </div>
                    <div class="col-lg-6 p-5">
                        <h1 class="h4 text-gray-900 mb-4 text-center">{{ cat }}</h1>
                        {% if error %}
                            <div class="alert alert-danger">{{ error }} <a class="small" href=" {{ path('app_login') }} ">se connecter</a> </div>
                        {% endif %}
                        {{ form_start(form) }}

                        {{ form_errors(form) }}

                        {{ form_widget(form, { 'attr': {'class': 'foo '} }) }}
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            <i class="fas fa-{{ico}}"></i>
                            {{ btnText }}
                        </button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}