{% extends "front/base_front.html.twig" %}

{% block title %}Modification de mot de passe{% endblock %}

{% block body %}
    
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-6 col-md-6">

            <div class="card border-0 shadow" style="margin-top:15%;">
                <div class="card-body p-0">
                {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                    <!-- Nested Row within Card Body -->
                        <div class="col-lg-12">
                            <div class="p-5">
                                <h2>Modification de mot de passe</h2>

                                {{ form_start(requestForm) }}
                                    {{ form_row(requestForm.email) }}
                                    <div class="mb-2">
                                        <small>
                                        Entrer votre mail pour recevoir un lien de modification de mot de passe.
                                        </small>
                                    </div>

                                    <button class="btn btn-primary">Envoyer le mail de modification</button>
                                {{ form_end(requestForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}