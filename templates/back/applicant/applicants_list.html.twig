{% extends "back/base_back.html.twig" %}

{% block title %}
	liste des contacts
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href=" {{ path('applicants_list') }} ">contacts</a></li>
	<li class="breadcrumb-item">
		<a href="">listes</a>
	</li>
	
{% endblock %}


{% block back_main_content %}


<div class="col-12 mb-5">
    <h2 class="amour"> {{applicants | length }} contacts  </h2>
</div>
                

<div class="card col">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTableFull" width="100%" cellspacing="0">
            <thead class="bg-double_dragon_skin">
                <tr class="default-color">
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Mail</th>
                    <th>Téléphone</th>
                    <th>Fonction</th>
                    <th>Service</th>
                    <th>Département</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
                {% for  applicant in applicants %}
                <tr>
                    <td>{{applicant.lastname}}</td>
                    <td>{{applicant.firstname}}</td>
                    <td>{{applicant.email}}</td>
                    <td>{{applicant.phone}}</td>
                    <td>{{applicant.job}}</td>
                    <td>{{applicant.office}}</td>
                    <td>{{applicant.department}}</td>
                    <td> <a href=" {{path('applicant_edit',{'id':applicant.id})}} ">Modifier</a> </td>
                </tr>
                {% endfor %}
                
            
            </tbody>
        </table>
    </div>
</div>
		

{% endblock %}